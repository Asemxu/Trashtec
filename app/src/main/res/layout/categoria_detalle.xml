<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="420dp"
    android:orientation="vertical"
    android:elevation="100dp"
    android:background="@drawable/back_detalle_categoria"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="217.5dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_medium"
                android:id="@+id/titulo_detalle_categoria"
                android:textSize="25dp"
                android:text="Titulo"
                android:autoSizeTextType="uniform"
                />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/close"
                android:layout_marginTop="5dp"
                android:id="@+id/btn_close_detalle_categoria"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:elevation="30dp"
                   android:textStyle="bold"
                   android:layout_marginLeft="30dp"
                    android:text="@string/por"
                   />
               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginBottom="10dp"
                   android:textColor="@color/black"
                   android:id="@+id/contenido_detalle_categoria"
                   android:layout_width="match_parent"
                   android:fontFamily="@font/raleway_medium"
                   android:textSize="15dp"
                   android:paddingBottom="20dp"
                   android:text="Contenido"
                   android:textAlignment="center"
                   android:layout_height="wrap_content"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="-20dp"
                   android:textColor="@color/black"
                   android:elevation="30dp"
                   android:textStyle="bold"
                   android:layout_marginLeft="30dp"
                   android:text="@string/examples"
                   />
               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginBottom="10dp"
                   android:textColor="@color/black"
                   android:id="@+id/ejemplos_detalle_categoria"
                   android:layout_width="match_parent"
                   android:fontFamily="@font/raleway_medium"
                   android:textSize="15dp"
                   android:paddingBottom="30dp"
                   android:text="Contenido"
                   android:textAlignment="center"
                   android:layout_height="wrap_content"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="-20dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:padding="10dp">
                   <ImageView
                       android:layout_width="75dp"
                       android:layout_height="75dp"
                       android:id="@+id/imagen_1_categoria"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/background_intro"/>
                   <ImageView
                       android:layout_width="75dp"
                       android:layout_height="75dp"
                       android:id="@+id/imagen_2_categoria"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/background_intro"/>
                   <ImageView
                       android:layout_width="75dp"
                       android:layout_height="75dp"
                       android:id="@+id/imagen_3_categoria"
                       android:src="@drawable/background_intro"/>
               </LinearLayout>
           </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>