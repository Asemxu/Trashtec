<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="-2dp"
        android:background="@drawable/bacground_card_descuento"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/imagen_descuento"
                android:src="@color/principal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:id="@+id/titulo_descuento"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/contenido_descuento"
                    android:text="Contenido"
                    android:autoSizeTextType="uniform"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/btn_add_descuento"
                    android:layout_gravity="center|right">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:src="@drawable/coins_descuento"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/raleway_medium"
                        android:id="@+id/points_descuento"
                        android:text="100"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="50dp"
        android:background="@drawable/backgorund_descuento"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10%"
            android:id="@+id/cantidad_descuento"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_medium"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>